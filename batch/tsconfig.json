{
    "compilerOptions": {
        "module": "esnext",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "moduleResolution": "node",
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "target": "es2020",
        "allowSyntheticDefaultImports": true
    },
    "compileOnSave": true,
    "include": [
        "src"
    ],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}
